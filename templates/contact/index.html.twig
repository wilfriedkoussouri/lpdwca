{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="container mx-auto p-8">
		<h1 class="text-3xl font-bold text-center mb-8">Let's talk</h1>

		<div class="bg-white rounded-lg shadow-md p-6">
			{{ form_start(form, {'attr': {'class': 'mx-auto max-w-xl'}}) }}
			<div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
				<div>
					{{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-semibold leading-6 text-gray-900'}}) }}
					<div class="mt-2.5">
						{{ form_widget(form.firstName, {'attr': {'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm'}}) }}
						{{ form_errors(form.firstName) }}
					</div>
				</div>
				<div>
					{{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-semibold leading-6 text-gray-900'}}) }}
					<div class="mt-2.5">
						{{ form_widget(form.lastName, {'attr': {'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm'}}) }}
						{{ form_errors(form.lastName) }}
					</div>
				</div>
				<div class="sm:col-span-2">
					{{ form_label(form.company, null, {'label_attr': {'class': 'block text-sm font-semibold leading-6 text-gray-900'}}) }}
					<div class="mt-2.5">
						{{ form_widget(form.company, {'attr': {'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm'}}) }}
						{{ form_errors(form.company) }}
					</div>
				</div>
				<div class="sm:col-span-2">
					{{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-semibold leading-6 text-gray-900'}}) }}
					<div class="mt-2.5">
						{{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm'}}) }}
						{{ form_errors(form.email) }}
					</div>
				</div>
				<div class="sm:col-span-2">
					{{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'block text-sm font-semibold leading-6 text-gray-900'}}) }}
					<div class="relative mt-2.5">
						<div class="absolute inset-y-0 left-0 flex items-center">
							<svg class="pointer-events-none absolute right-3 top-0 h-full w-5 text-gray-400" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
								<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd"/>
							</svg>
						</div>
						{{ form_widget(form.phoneNumber, {'attr': {'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm'}}) }}
						{{ form_errors(form.phoneNumber) }}
					</div>
				</div>
				<div class="sm:col-span-2">
					{{ form_label(form.message, null, {'label_attr': {'class': 'block text-sm font-semibold leading-6 text-gray-900'}}) }}
					<div class="mt-2.5">
						{{ form_widget(form.message, {'attr': {'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm'}}) }}
						{{ form_errors(form.message) }}
					</div>
				</div>
			</div>
			<div class="mt-10">
				<button type="submit" class="block w-full rounded-md bg-gray-900 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900">Let's talk</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
